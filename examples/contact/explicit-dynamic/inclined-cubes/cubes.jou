nodeset 5 name "nsz-"
nodeset 6 surface 1
nodeset 6 name "nsz+"
nodeset 7 volume all
nodeset 7 name "nsall"
sideset 1 surface 4
sideset 1 name "ssx-"
sideset 2 surface 6
sideset 2 name "ssx+"
sideset 3 surface 3
sideset 3 name "ssy-"
sideset 4 surface 5
sideset 4 name "ssy+"
sideset 5 surface 2
sideset 5 name "ssz-"
sideset 6 surface 1
sideset 6 name "ssz+"
